@model BellaNapoli.Models.Proveedor

@{
    ViewData["Title"] = "Detalles de Proveedor";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fffafa;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

        .container-detalle {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 40px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 5rem;
            border: 2px solid #28a745;
        }

        h1 {
            text-align: center;
            font-size: 2.2rem;
            color: #28a745;
            margin-bottom: 10px;
        }

        h4 {
            text-align: center;
            font-size: 1.3rem;
            margin-bottom: 20px;
            color: #555;
        }

        dt {
            font-weight: bold;
            color: #333;
        }

        dd {
            margin-bottom: 15px;
            color: #555;
        }

        .form-buttons {
            margin-top: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container-detalle">
        <h1>Detalles de Proveedor</h1>

        <div>
            <h4>Proveedor</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Documento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Documento)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RazonSocial)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RazonSocial)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>

        <div class="form-buttons">
            <a asp-action="Edit" asp-route-id="@Model.IdProveedor" class="btn btn-success">Editar</a> |
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

