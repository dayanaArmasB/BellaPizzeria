@model BellaNapoli.Models.Ventum

@{
    ViewData["Title"] = "Crear Venta";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fffafa;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

        .container-crear {
            flex: 1;
            padding: 40px 20px;
            max-width: 600px;
            margin: 40px auto 5rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border: 2px solid #28a745;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 30px;
            text-align: center;
        }

        h4 {
            text-align: center;
            font-size: 1.3rem;
            margin-bottom: 20px;
            color: #555;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 6px;
        }

        .form-control {
            width: 100%;
            border-radius: 5px;
            padding: 10px;
            border: 1px solid #ccc;
            font-size: 1rem;
        }

            .form-control[readonly] {
                background-color: #e9ecef;
            }

        .form-buttons {
            margin-top: 30px;
            text-align: center;
        }

        .btn-primary {
            background-color: #28a745;
            color: white;
            font-size: 1.1rem;
            padding: 10px 30px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #218838;
            }

        a.btn-secondary {
            margin-left: 15px;
            font-size: 1.1rem;
            padding: 10px 25px;
            background-color: #6c757d;
            color: white;
            border-radius: 6px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            a.btn-secondary:hover {
                background-color: #5a6268;
            }

        .text-danger {
            color: #dc3545;
            font-size: 0.9rem;
            margin-top: 4px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container-crear">
        <h1>Crear Venta</h1>
        <h4>Complete la información</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Usuario</label>
                <input type="text" class="form-control" value="@User.Identity.Name" readonly />
                <input type="hidden" asp-for="IdUsuario" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
            </div>

            <div class="form-group">
                <label asp-for="TipoDocumento"></label>
                <select asp-for="TipoDocumento" class="form-control">
                    <option value="">-- Seleccione Tipo Documento --</option>
                    <option value="DNI">DNI</option>
                    <option value="RUC">RUC</option>
                </select>
                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroDocumento"></label>
                <input asp-for="NumeroDocumento" class="form-control" />
                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DocumentoCliente"></label>
                <input asp-for="DocumentoCliente" class="form-control" />
                <span asp-validation-for="DocumentoCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NombreCliente"></label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoPago"></label>
                <input asp-for="MontoPago" class="form-control" />
                <span asp-validation-for="MontoPago" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoCambio"></label>
                <input asp-for="MontoCambio" class="form-control" />
                <span asp-validation-for="MontoCambio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontoTotal"></label>
                <input asp-for="MontoTotal" class="form-control" />
                <span asp-validation-for="MontoTotal" class="text-danger"></span>
            </div>

            <div class="form-buttons">
                <input type="submit" value="💾 Crear" class="btn-primary" />
                <a asp-action="Index" class="btn-secondary">← Volver a la lista</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
