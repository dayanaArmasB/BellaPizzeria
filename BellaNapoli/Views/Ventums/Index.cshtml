@model IEnumerable<BellaNapoli.Models.Ventum>

@{
    ViewData["Title"] = "Lista de Ventas";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .container-venta {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 40px auto;
            background-color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 5rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-group {
            display: flex;
            gap: 5px;
        }

        .table-responsive {
            margin-top: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                vertical-align: middle;
            }

            .table th {
                background-color: #28a745;
                color: white;
                font-weight: bold;
            }

            .table td {
                background-color: #f9f9f9;
            }

        .acciones a {
            margin: 0 5px;
            padding: 6px 12px;
            border-radius: 5px;
            font-size: 0.9rem;
            text-decoration: none;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-success {
            background-color: #28a745;
        }

        .crear-nuevo {
            margin-bottom: 20px;
            text-align: center;
        }

            .crear-nuevo a {
                font-size: 1rem;
                padding: 10px 20px;
                background-color: #28a745;
                color: white;
                border-radius: 6px;
                text-decoration: none;
            }

                .crear-nuevo a:hover {
                    background-color: #218838;
                }
    </style>
</head>
<body>
    <div class="container-venta">
        <h1>Lista de Ventas</h1>

        <div class="crear-nuevo">
            <a asp-action="Create">➕ Registrar Venta</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                       
                        <th>@Html.DisplayNameFor(model => model.NumeroDocumento)</th>
                        <th>@Html.DisplayNameFor(model => model.DocumentoCliente)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreCliente)</th>
                        <th>@Html.DisplayNameFor(model => model.MontoPago)</th>
                        <th>@Html.DisplayNameFor(model => model.MontoCambio)</th>
                        <th>@Html.DisplayNameFor(model => model.MontoTotal)</th>
                        <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                        <th>Registrado por</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        
                            <td>@Html.DisplayFor(modelItem => item.NumeroDocumento)</td>
                            <td>@Html.DisplayFor(modelItem => item.DocumentoCliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreCliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.MontoPago)</td>
                            <td>@Html.DisplayFor(modelItem => item.MontoCambio)</td>
                            <td>@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                            <td>@item.IdUsuarioNavigation?.NombreCompleto</td>
                            <td class="acciones">
                                <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn-primary">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.IdVenta" class="btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
