@model BellaNapoli.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fffafa;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

        .container-eliminar {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 40px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 5rem;
            border: 2px solid #dc3545;
        }

        h1 {
            text-align: center;
            font-size: 2.2rem;
            color: #dc3545;
            margin-bottom: 10px;
        }

        h3 {
            text-align: center;
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 30px;
        }

        h4 {
            text-align: center;
            font-size: 1.3rem;
            margin-bottom: 20px;
            color: #555;
        }

        dt {
            font-weight: bold;
            color: #333;
        }

        dd {
            margin-bottom: 15px;
            color: #555;
        }

        .form-buttons {
            margin-top: 20px;
            text-align: center;
        }

    </style>
</head>
<body>
    <div class="container-eliminar">
        <h1>Eliminar Producto</h1>

        <h3>¿Está seguro de eliminar este producto?</h3>

        <div>
            <h4>Detalles del Producto</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.IdCategoria)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.IdCategoria)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Stock)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdProducto" />
                <div class="form-buttons">
                    <input type="submit" value="🗑 Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">← Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

