@model IEnumerable<BellaNapoli.Models.Cliente>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] = "Lista de Categorías"</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

        .container-cli {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 0 auto;
            background-color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 5rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 30px;
            text-align: center;
        }

        .table-responsive {
            margin-top: 30px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                vertical-align: middle;
            }

            .table th {
                background-color: #28a745;
                color: white;
                font-weight: bold;
            }

            .table td {
                background-color: #f9f9f9;
            }

            .table tr:hover {
                background-color: #e9f7e6; /* Fondo claro al pasar el mouse */
            }

        .btn + .btn {
            margin-left: 5px;
        }

        .btn-sm {
            font-size: 0.875rem;
        }

    </style>
</head>
<body>
    <div class="container-cli">
        <h1>Categorías</h1>

        <p class="text-center">
            <a asp-action="Create" class="btn btn-success mb-3">➕ Crear nueva categoría</a>
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Documento)</th>
                        <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
                        <th>@Html.DisplayNameFor(model => model.Correo)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                            <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-primary">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

