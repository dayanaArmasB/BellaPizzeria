@model ErrorViewModel
@{
    ViewData["Title"] = "¡Ups! Algo salió mal";
}

<style>
    .error-container {
        text-align: center;
        padding: 60px 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    .error-code {
        font-size: 120px;
        color: #dc3545;
        font-weight: bold;
        margin-bottom: 0;
    }

    .error-message {
        font-size: 28px;
        color: #333;
        margin-top: 0;
    }

    .error-subtext {
        font-size: 16px;
        color: #666;
        margin-top: 20px;
    }

    .btn-home {
        margin-top: 30px;
        padding: 12px 24px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 8px;
        text-decoration: none;
    }

        .btn-home:hover {
            background-color: #0056b3;
        }
</style>

<div class="error-container">
    <div class="error-code">500</div>
    <div class="error-message">¡Oops! Ha ocurrido un error inesperado</div>
    <div class="error-subtext">
        Lo sentimos, algo salió mal mientras procesábamos tu solicitud.<br />
        Intenta nuevamente más tarde o vuelve al inicio.
    </div>

    @if (Model.ShowRequestId)
    {
        <p style="margin-top: 20px;">
            <strong>ID de seguimiento:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a class="btn-home" href="/">Volver al inicio</a>
</div>
