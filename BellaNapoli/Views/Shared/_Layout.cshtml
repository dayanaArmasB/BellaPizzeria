<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BellaNapoli</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BellaNapoli.styles.css" asp-append-version="true" />

    <style>
        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        footer {
            background-color: #f8f9fa;
        }

        /* 🔥 Hover para los ítems del navbar */
        .navbar-nav .nav-link:hover {
            background-color: #000;
            color: #fff !important;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-danger shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/ima/logopizza.png" alt="Logo">
                    BellaNapoli
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        @if (User.IsInRole("ADMINISTRADOR"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Rols" asp-action="Index">Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Permisoes" asp-action="Index">Permisos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Proveedors" asp-action="Index">Proveedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categoriums" asp-action="Index">Categorías</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productoes" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Compras" asp-action="Index">Compras</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ventums" asp-action="Index">Ventas</a>
                        </li>
                    </ul>

                    <form asp-controller="Login" asp-action="Logout" method="post" class="d-flex">
                        <button type="submit" class="btn btn-outline-light">Cerrar sesión</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-center text-muted">
        <div class="container">
            &copy; 2024 - BellaNapoli - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Política de privacidad</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>