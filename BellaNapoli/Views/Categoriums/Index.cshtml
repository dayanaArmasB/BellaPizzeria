@model IEnumerable<BellaNapoli.Models.Categorium>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]="Lista de categorias"</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

    
        .container-cat {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 0 auto;
            background-color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 5rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 30px;
            text-align: center;
        }

        .table-responsive {
            margin-top: 30px;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                vertical-align: middle;
            }

            .table th {
                background-color: #28a745;
                color: white;
                font-weight: bold;
            }

            .table td {
                background-color: #f9f9f9;
            }

        .btn + .btn {
            margin-left: 5px;
        }

        .btn-sm {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
        <div class="container-cat">
            <h1>Categorías</h1>

            <p class="text-center">
                <a asp-action="Create" class="btn btn-success mb-3">➕ Crear nueva categoría</a>
            </p>

        <div class="table-responsive">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Estado)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FechaRegistro)</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-primary">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-warning">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

           </div>
            
        </div>
</body>
</html>
