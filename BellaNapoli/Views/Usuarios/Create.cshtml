@model BellaNapoli.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fffafa;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

        .container-crear {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 40px auto;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 5rem;
            border: 2px solid #28a745;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 30px;
            text-align: center;
        }

        h4 {
            text-align: center;
            font-size: 1.3rem;
            margin-bottom: 20px;
            color: #555;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
        }

        .form-buttons {
            margin-top: 20px;
            text-align: center;
        }

    </style>
</head>
<body>
    <div class="container-crear">
        <h1>Crear Usuario</h1>

        <h4>Usuario</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Documento"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NombreCompleto"></label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clave"></label>
                <input asp-for="Clave" class="form-control" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdRol"></label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
            </div>

        </form>

        <div class="form-buttons">
            <input type="submit" value="Crear" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

