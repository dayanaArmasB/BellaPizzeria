@model IEnumerable<BellaNapoli.Models.Permiso>

@{
    ViewData["Title"] = "Lista de Permisos";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            overflow-x: hidden; /* Previene scroll horizontal */
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container-permisos {
            flex: 1;
            padding: 40px 20px;
            max-width: auto;
            margin: 0 auto;
            background-color: white;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin-bottom: 5rem;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 30px;
            text-align: center;
        }

        .table-responsive {
            margin-top: 30px;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 12px;
                text-align: center;
                border: 1px solid #ddd;
                vertical-align: middle;
            }


            .table th {
                background-color: #28a745;
                color: white;
                font-weight: bold;
            }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #f9f9f9;
        }


        .btn-group {
            display: flex;
            gap: 5px;
        }

        .text-center {
            text-align: center;
        }

        .btn {
            padding: 5px 10px;
        }

    </style>
</head>
<body>

    <div class="container-permisos">
        <h1>Lista de Permisos</h1>

        <p class="text-center">
            <a asp-action="Create" class="btn btn-success">➕ Crear nuevo permiso</a>
        </p>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Rol</th>
                        <th>Nombre de Menú</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IdRol)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreMenu)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.IdPermiso" class="btn btn-sm btn-warning">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.IdPermiso" class="btn btn-sm btn-info">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.IdPermiso" class="btn btn-sm btn-danger">Eliminar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>

